v#include <stdio.h>
#include <stdlib.h>

#define MAX 100

int adj[MAX][MAX];
int visited[MAX];
int queue[MAX];
int front = -1, rear = -1;
int n;

void bfs(int start) {
  int i, u;
  visited[start] = 1;
  queue[++rear] = start;
  while (front != rear) {
    u = queue[++front];
    for (i = 1; i <= n; i++) {
      if (adj[u][i] == 1 && visited[i] == 0) {
        visited[i] = 1;
        queue[++rear] = i;
      }
    }
  }
}

int main() {
  int i, j, start;
  printf("Enter number of vertices: ");
  scanf("%d", &n);
  printf("Enter the adjacency matrix:\n");
  for (i = 1; i <= n; i++) {
    for (j = 1; j <= n; j++) {
      scanf("%d", &adj[i][j]);
    }
  }
  printf("Enter the starting vertex: ");
  scanf("%d", &start);
  bfs(start);
  printf("The BFS traversal of the graph is:\n");
  for (i = 1; i <= n; i++) {
    if (visited[i]) printf("%d ", i);
  }
  return 0;
}
